void setup() {
  Serial.begin(9600);
  display.begin(SH1106_SWITCHCAPVCC, 0x3C);
  //display.begin(SH1106_SWITCHCAPVCC, 0x78);
  display.clearDisplay();
  display.display();

  display.clearDisplay();

  display.drawBitmap(0, 10, Title, 128, 64, WHITE);
  display.display();
  delay(3000);

  display.clearDisplay();
}

void loop() {
  display.clearDisplay();
  if (gameMode == 0) {
    mainMenu();
    controller();
  }

  if(gameMode == 1){
    Game();
    controller();
  }

  displayBattery(WHITE);
  displayIndicators(WHITE);
  displayWIFI(WHITE);

  display.display();
}
